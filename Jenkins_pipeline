pipeline{
    agent any
    
    environment{
        PATH = "C:/Program Files/apache-maven-3.8.6/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
               git credentialsId: 'javajenkins', url: 'https://github.com/bharah08/devopsproject.git'
            }
        }
         stage('Build') {
            steps {
dir("C:/Users/lbhar/.jenkins/workspace/ppyyline/devopsproject/"){
                bat 'mvn -B -DskipTests clean package'
         }
         }
         }
     }
    post {
       always {
          junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
      )
      }
   } 
}
